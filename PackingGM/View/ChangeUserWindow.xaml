<Window x:Class="PackingGM.View.ChangeUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PackingGM.View"
        mc:Ignorable="d"
        Title="ChangeUserWindow" Height="450" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <TextBlock Style="{DynamicResource TextBlockStyle}"
                       Text="{Binding TextHeading}"
                       FontSize="20"/>
        </DockPanel>
        <Grid Grid.Row="1">
            <StackPanel  Width="300">
                <DockPanel>
                    <TextBox Text="{Binding User.Login}"
                             DockPanel.Dock="Right"
                             Width="200"/>
                    <TextBlock DockPanel.Dock="Left"
                               Text="Логин"/>
                </DockPanel>
                <DockPanel>
                    <TextBox Text="{Binding User.Password}"
                             DockPanel.Dock="Right"
                             Width="200"/>
                    <TextBlock DockPanel.Dock="Left"
                               Text="Пароль"/>
                </DockPanel>
                <DockPanel>
                    <ComboBox DockPanel.Dock="Right"
                              ItemsSource="{Binding Roles}"
                              SelectedItem="{Binding User.Role}"/>
                    <TextBlock DockPanel.Dock="Left"
                               Text="Роль"/>
                </DockPanel>
                <Button Command="{Binding SaveUserCommand}">
                    Сохранить
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
