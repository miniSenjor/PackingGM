<Page x:Class="PackingGM.View.ManageRequstView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PackingGM.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageRequstView">

    <Grid Style="{DynamicResource GridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Command="{Binding BackCommand}"
                    Style="{DynamicResource ButtonYesStyle}"
                    Content="Назад"
                    Width="50"
                    HorizontalAlignment="Left"/>
            <TextBlock Text="Поддержка"
                       FontSize="20"
                       Style="{DynamicResource TextBlockHeadStyle}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Width="500" Margin="0 20">
            <ListView ItemsSource="{Binding ListRequest}"
                      Style="{DynamicResource ListViewStyle}"
                      SelectedItem="{Binding SelectedRequest}" d:ItemsSource="{d:SampleData ItemCount=5}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <DockPanel MinWidth="485">
                            <Button Content="Открыть"
                                    DockPanel.Dock="Right"
                                    Width="70"
                                    Command="{Binding OpenRequestCommand}"/>
                            <TextBlock Style="{DynamicResource TextBlockStyle}"
                                       Background="{DynamicResource GrayBrush}"
                                       Text="{Binding Text}"/>
                        </DockPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <TextBox Text="{Binding Text}"
                     TextWrapping="Wrap"/>
            <Button x:Name="btnSend"
                    Content="Отправить"
                    Command="{Binding SendCommand}"/>
        </StackPanel>
    </Grid>
</Page>
