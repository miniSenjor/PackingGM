<Page x:Class="PackingGM.View.ManageUserView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PackingGM.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageUserView">

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <Button Command="{Binding BackCommand}"
                    DockPanel.Dock="Left"
                    Height="40"
                    VerticalAlignment="Top">
                Назад
            </Button>
            <StackPanel DockPanel.Dock="Top">
                <TextBlock Text="Управление пользователями"
                           Style="{DynamicResource TextBlockStyle}"
                           FontSize="26" 
                           Grid.Row="1"/>
                <DockPanel Width="500">
                    <TextBox Text="{Binding SearchText}"
                             DockPanel.Dock="Left"
                             Width="350"/>
                    <Button Command="{Binding SearchUserCommand}"
                            DockPanel.Dock="Right"
                            Width="60">
                        Поиск
                    </Button>
                </DockPanel>
                <Button Command="{Binding SaveCommand}"
                        Style="{DynamicResource ButtonStyle}"
                        Background="{DynamicResource BackgroundBrush}"
                        Width="150">
                    Сохранить изменения
                </Button>
                <Button Command="{Binding CreateUserCommand}"
                        Style="{DynamicResource ButtonStyle}"
                        Background="{DynamicResource BackgroundBrush}"
                        Width="150">
                    Создать пользователя
                </Button>
            </StackPanel>
        </DockPanel>
        <ListView ItemsSource="{Binding Users}" 
                  Grid.Row="1"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Login}"/>
                        <TextBlock Text=" Роль"/>
                        <TextBlock Text="{Binding Role.Name}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>