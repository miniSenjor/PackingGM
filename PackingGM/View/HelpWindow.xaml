<Window x:Class="PackingGM.View.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PackingGM.View"
        mc:Ignorable="d"
        Title="HelpWindow" Height="450" Width="800">
    <Grid Style="{DynamicResource GridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock Text="Поддержка"
                       FontSize="20"
                       Style="{DynamicResource TextBlockHeadStyle}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Width="500" Margin="0 20">
            <TextBox Text="{Binding Text}"
                     TextWrapping="Wrap"/>
            <Button x:Name="btnSend"
                    Content="Отправить"
                    Command="{Binding SendCommand}"/>
        </StackPanel>
    </Grid>
</Window>
