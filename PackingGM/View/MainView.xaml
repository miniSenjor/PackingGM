<Page x:Class="PackingGM.View.MainView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PackingGM.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainView">

    <Grid Style="{DynamicResource GridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <Button Content="Выход"
                    Style="{DynamicResource ButtonNoStyle}"
                    Command="{Binding ExitCommand}"
                    Width="60"
                    Height="40"
                    DockPanel.Dock="Right"/>
            <TextBlock Text="Меню"
                       DockPanel.Dock="Left"
                       Style="{DynamicResource TextBlockHeadStyle}"
                       FontSize="25"/>
        </DockPanel>
        <StackPanel Grid.Row="1" Width="250">
            <Button Command="{Binding OpenChangeUserCommand}"
                    Content="Управление пользователями"
                    Visibility="{Binding IsAlowedAdmining}"/>
            <Button Command="{Binding OpenChangeGraphCommand}"
                    Content="Управление графиком Тара"
                    Visibility="{Binding IsAlowedViewing}"/>
            <Button Command="{Binding OpenChangeGraphD3Command}"
                    Content="Управление графиком Д3"
                    Visibility="{Binding IsAlowedViewing}"/>
            <Button Command="{Binding OpenTestCommand}"
                    Content="Заполнение бд"
                    Visibility="{Binding IsAlowedAdmining}"/>
        </StackPanel>
    </Grid>
</Page>
